listen
    type linemode
        2003 proto tcp
        2003 proto udp
        /tmp/.s.carbon-c-relay.2003 proto unix
    ;

statistics
    submit every 60 seconds
    prefix with carbon.relays.test_hostname
    ;

cluster log-file
    file
        /tmp/carbon-c-relay-metrics.log
    ;
cluster next-hop
    forward
        127.0.0.1:2013
    ;

match *
    send to log-file
    ;
match *
    send to next-hop
    stop
    ;

